.doctor-page {
  min-height: 100vh;
  background: #eaf3ff;
  padding: 32rpx;
}

.card {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(14, 59, 122, 0.08);
  margin-bottom: 24rpx;
}

.profile-header {
  display: flex;
  align-items: center;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 999rpx;
  border: 1rpx solid #e0e6f6;
  background: #f4f6fb;
  margin-right: 24rpx;
  object-fit: cover;
}

.profile-info {
  flex: 1;
}

.profile-name {
  font-size: 34rpx;
  font-weight: 600;
}

.profile-title {
  font-size: 26rpx;
  color: #8a94a6;
  margin: 6rpx 0;
}

.profile-meta,
.profile-expertise {
  font-size: 26rpx;
  color: #1c2b4d;
}

.profile-desc {
  margin-top: 24rpx;
  font-size: 26rpx;
  color: #55607a;
  line-height: 1.6;
}


.section-tabs {
  display: flex;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #e1e6f0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #7d8798;
}

.tab.active {
  color: #0f62fe;
  font-weight: 600;
  border-bottom: 4rpx solid #0f62fe;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f2f5;
}

.schedule-item:last-child {
  border-bottom: none;
}

.schedule-info {
  flex: 1;
  min-width: 0;
}

.schedule-date {
  font-size: 30rpx;
  font-weight: 600;
}

.schedule-extra {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #7d8798;
}

.intro-section {
  padding: 4rpx 0;
}

.intro-item {
  margin-bottom: 32rpx;
}

.intro-title {
  font-size: 28rpx;
  color: #0f62fe;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.intro-title::before {
  content: '';
  width: 12rpx;
  height: 12rpx;
  border-radius: 999rpx;
  background: #0f62fe;
  margin-right: 12rpx;
}

.intro-text {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.6;
}

.book-btn {
  border-radius: 999rpx;
  background: #4f8efd;
  color: #fff;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  margin-left: auto;
}
